<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">
    
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mycompany.webapplicationdb.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>com.mycompany.webapplicationdb.controller.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeletePostServlet</servlet-name>
        <servlet-class>com.mycompany.webapplicationdb.controller.DeletePostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeletePostServlet</servlet-name>
        <url-pattern>/DeletePostServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FollowUserServlet</servlet-name>
        <servlet-class>com.mycompany.webapplicationdb.controller.FollowUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FollowUserServlet</servlet-name>
        <url-pattern>/FollowUserServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.mycompany.webapplicationdb.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SubmitHelpServlet</servlet-name>
        <servlet-class>com.mycompany.webapplicationdb.controller.SubmitHelpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitHelpServlet</servlet-name>
        <url-pattern>/SubmitHelpServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UnfollowUserServlet</servlet-name>
        <servlet-class>com.mycompany.webapplicationdb.controller.UnfollowUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnfollowUserServlet</servlet-name>
        <url-pattern>/UnfollowUserServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminCreateAccountServlet</servlet-name>
        <servlet-class>com.mycompany.webapplicationdb.controller.AdminCreateAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminCreateAccountServlet</servlet-name>
        <url-pattern>/AdminCreateAccountServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminDeleteAccountsServlet</servlet-name>
        <servlet-class>com.mycompany.webapplicationdb.controller.AdminDeleteAccountsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDeleteAccountsServlet</servlet-name>
        <url-pattern>/AdminDeleteAccountsServlet</url-pattern>
    </servlet-mapping>
    <error-page>
        <exception-type>com.mycompany.webapplicationdb.exception.DatabaseConnectionFailedException</exception-type>
        <location>/error.jsp</location>
    </error-page>
    <!-- TODO: Add all exception here-->
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
